  "shortcuts": [
    {
      "name": "Voice Chat",
      "short_name": "Chat",
      "description": "Start voice conversation with AVA",
      "url": "/?action=voice-chat",
      "icons": [
        {
          "src": "/static/icons/shortcut-voice.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Device Control",
      "short_name": "Control",
      "description": "Access device control features",
      "url": "/?action=device-control",
      "icons": [
        {
          "src": "/static/icons/shortcut-control.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Monitor",
      "short_name": "Monitor",
      "description": "View conversation history and analytics",
      "url": "/monitor",
      "icons": [
        {
          "src": "/static/icons/shortcut-monitor.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "ava-core",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "audio/*": [".wav", ".mp3", ".m4a"],
        "text/*": [".txt", ".md"]
      }
    }
  ],
  "share_target": {
    "action": "/api/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["audio/*", "text/*"]
        }
      ]
    }
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "capture_links": "existing-client-navigate",
  "id": "com.radosavlevici.avacore",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "note_taking": {
    "new_note_url": "/?action=new-note"
  }
}