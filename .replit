modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "espeak-ng", "libiconv", "libxcrypt", "openssl", "pkg-config", "portaudio", "rustc"]

[workflows]
runButton = "AVA CORE Server"

[[workflows.workflow]]
name = "AVA CORE Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python app.py"]

[[ports]]
localPort = 5000
externalPort = 80  # Will only be respected in preview deployments
